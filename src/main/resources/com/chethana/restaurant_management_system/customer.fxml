<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chethana.restaurant_management_system.controllers.CustomerController">

    <top>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="ðŸ‘¤ Customer Management" />

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button onAction="#handleAddCustomer" prefHeight="38.0" prefWidth="138.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="âž• Add Customer" />
                <Button onAction="#handleEditCustomer" prefHeight="38.0" prefWidth="143.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="âœï¸ Edit Customer" />
                <Button onAction="#handleDeleteCustomer" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="ðŸ—‘ï¸ Delete Customer" />

                <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handlePrint" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="ðŸ—‘ï¸ Print Report" />

                <TextField fx:id="searchField" onKeyReleased="#handleSearch" prefHeight="38.0" prefWidth="128.0" promptText="Search customers..." style="-fx-padding: 10; -fx-pref-width: 250;" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="customerTable" style="-fx-padding: 0 20 20 20;">
            <columns>
                <TableColumn fx:id="colCustomerId" prefWidth="50" text="ID" />
                <TableColumn fx:id="colCustomerCode" prefWidth="120" text="Customer Code" />
                <TableColumn fx:id="colName" prefWidth="200" text="Name" />
                <TableColumn fx:id="colEmail" prefWidth="250" text="Email" />
                <TableColumn fx:id="colContact" prefWidth="150" text="Contact" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>

</BorderPane>
