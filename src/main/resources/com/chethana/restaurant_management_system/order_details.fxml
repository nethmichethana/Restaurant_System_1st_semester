<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.chethana.restaurant_management_system.controllers.OrderDetailsController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: white;">

    <Label text="ðŸ“‹ Order Details" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" prefWidth="120" />
            <ColumnConstraints hgrow="ALWAYS" prefWidth="200" />
            <ColumnConstraints hgrow="NEVER" prefWidth="120" />
            <ColumnConstraints hgrow="ALWAYS" prefWidth="200" />
        </columnConstraints>

        <Label text="Order ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="orderIdLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Customer:" GridPane.rowIndex="0" GridPane.columnIndex="2" />
        <Label fx:id="customerNameLabel" GridPane.rowIndex="0" GridPane.columnIndex="3" />

        <Label text="Waiter:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Label fx:id="staffNameLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Order Time:" GridPane.rowIndex="1" GridPane.columnIndex="2" />
        <Label fx:id="orderTimeLabel" GridPane.rowIndex="1" GridPane.columnIndex="3" />

        <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Label fx:id="statusLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Payment Method:" GridPane.rowIndex="2" GridPane.columnIndex="2" />
        <Label fx:id="paymentMethodLabel" GridPane.rowIndex="2" GridPane.columnIndex="3" />

        <Label text="Total Amount:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <Label fx:id="totalAmountLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"
               GridPane.rowIndex="3" GridPane.columnIndex="1" />
    </GridPane>

    <Label text="Order Items:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <TableView fx:id="itemsTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="colItemName" text="Item Name" prefWidth="200" />
            <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="80" />
            <TableColumn fx:id="colUnitPrice" text="Unit Price" prefWidth="100" />
            <TableColumn fx:id="colTotalPrice" text="Total Price" prefWidth="100" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Close" onAction="#handleClose"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" />
    </HBox>

</VBox>