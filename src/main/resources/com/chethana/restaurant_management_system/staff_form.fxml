<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.chethana.restaurant_management_system.controllers.StaffFormController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: white;">

    <Label text="ðŸ‘¤ Staff Information" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <GridPane hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" prefWidth="100" />
            <ColumnConstraints hgrow="ALWAYS" prefWidth="250" />
        </columnConstraints>

        <Label text="Staff Code *" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="staffCodeField" promptText="STF001" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Full Name *" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="nameField" promptText="Enter full name" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Email *" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="emailField" promptText="email@example.com" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Contact" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="contactField" promptText="0712345678" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Role *" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <ComboBox fx:id="roleCombo" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="Username *" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <TextField fx:id="usernameField" promptText="Enter username" GridPane.rowIndex="5" GridPane.columnIndex="1" />

        <Label text="Password *" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.rowIndex="6" GridPane.columnIndex="1" />

        <Label text="Hire Date *" GridPane.rowIndex="7" GridPane.columnIndex="0" />
        <DatePicker fx:id="hireDatePicker" GridPane.rowIndex="7" GridPane.columnIndex="1" />

        <Label text="Status" GridPane.rowIndex="8" GridPane.columnIndex="0" />
        <ComboBox fx:id="statusCombo" GridPane.rowIndex="8" GridPane.columnIndex="1" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="ðŸ’¾ Save"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"
                onAction="#handleSave" />
        <Button fx:id="cancelButton" text="âŒ Cancel"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"
                onAction="#handleCancel" />
    </HBox>

</VBox>