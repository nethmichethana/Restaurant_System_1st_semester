<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.chethana.restaurant_management_system.controllers.InventoryController">

    <top>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label text="ðŸ“¦ Inventory Management" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="âž• Add Item" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"
                        onAction="#handleAddItem" />
                <Button text="âœï¸ Edit Item" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"
                        onAction="#handleEditItem" />
                <Button text="ðŸ“¤ Update Stock" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"
                        onAction="#handleUpdateStock" />
                <Button text="ðŸ—‘ï¸ Delete Item" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"
                        onAction="#handleDeleteItem" />

                <Region HBox.hgrow="ALWAYS" />

                <TextField fx:id="searchField" promptText="Search inventory..."
                           style="-fx-padding: 10; -fx-pref-width: 250;"
                           onKeyReleased="#handleSearch" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="inventoryTable" style="-fx-padding: 0 20 20 20;">
            <columns>
                <TableColumn fx:id="colInventoryId" text="ID" prefWidth="50" />
                <TableColumn fx:id="colItemName" text="Item Name" prefWidth="200" />
                <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="100" />
                <TableColumn fx:id="colUnit" text="Unit"/>
                <TableColumn fx:id="colLastUpdated" text="Last Updated" prefWidth="150" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>

</BorderPane>