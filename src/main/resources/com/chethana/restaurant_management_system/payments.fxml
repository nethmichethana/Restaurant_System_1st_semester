<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chethana.restaurant_management_system.controllers.PaymentController">

    <top>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="ðŸ’° Payment Management" />

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button onAction="#handleAddPayment" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="âž• New Payment" />
                <Button onAction="#handleViewPayment" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="ðŸ‘ï¸ View Details" />

                <Region HBox.hgrow="ALWAYS" />

                <DatePicker fx:id="dateFrom" promptText="From" style="-fx-pref-width: 150;" />
                <DatePicker fx:id="dateTo" promptText="To" style="-fx-pref-width: 150;" />
                <Button onAction="#handleSearch" text="ðŸ” Filter" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tblPayments" style="-fx-padding: 0 20 20 20;">
            <columns>
                <TableColumn fx:id="colPaymentId" text="Payment ID" />
                <TableColumn fx:id="colOrderId" text="Order ID" />
                <TableColumn fx:id="colCustomer" prefWidth="150" text="Customer" />
                <TableColumn fx:id="colMethod" prefWidth="100" text="Method" />
                <TableColumn fx:id="colAmount" prefWidth="120" text="Amount (Rs.)" />
                <TableColumn fx:id="colPaymentDate" prefWidth="150" text="Payment Date" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>

</BorderPane>
